  "hconcat": [
    {
      "width": 900,
      "height": 600,
      "title": {
        "text": "Confirmed cases around the world",
        "subtitle": "Active, recovered and deaths in terms of total count"
      },
      "projection": {"type": "equalEarth", "translate": [440, 300], "scale":{"expr": "zoom_level"}},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "white"},
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/new_daily_data.csv"
                },
                "key": "country",
                "fields": ["date", "country", "cumulative_total_cases", "population"]
              }
            },
            {
              "filter":"Country_selection == null || datum.country == Country_selection"
            },
            {
              "calculate": "floor(datum.cumulative_total_cases / (datum.population / 1000000))",
              "as": "total_confirmed_country"
            }
          ],
          "encoding": {
            "color": {
              "field": "total_confirmed_country",
              "type": "quantitative",
              "scale": {"type": "log", "scheme": "goldred"},
              "title": "total confirmed cases",
              "legend": {
                "orient": "bottom"
              }
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {
                "field": "total_confirmed_country",
                "type": "quantitative",
                "title": "Total confirmed cases"
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "text",
            "dx": 0,
            "fontSize": 13,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "properties.NAME", "type": "nominal"},
            "longitude": {
              "field": "properties.LABEL_X",
              "type": "quantitative"
            },
            "latitude": {"field": "properties.LABEL_Y", "type": "quantitative"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Canada' || datum['properties.NAME'] == 'Antarctica' || datum['properties.NAME'] == 'Australia'",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "vconcat": [
        {
          "title": "Daily COVID-19 deaths in the world",
          "width": 900,
          "height": 400,
          "layer": [
            {
              "mark": {"type": "line", "point": true},
              "transform": [
                {
                  "aggregate": [
                    {
                      "op": "sum",
                      "field": "daily_new_deaths",
                      "as": "sum_daily_new_deaths_each_country"
                    }
                  ],
                  "groupby": ["date"]
                }
              ],
              "encoding": {
                "x": {
                  "field": "date",
                  "type": "temporal",
                  "scale": {"domain": {"param": "brush"}},
                  "axis": {"title": "", "format": "%b %Y"}
                },
                "y": {
                  "aggregate": "sum",
                  "field": "sum_daily_new_deaths_each_country",
                  "type": "quantitative",
                  "title": "deaths"
                },
                "tooltip": [
                  {"field": "date", "type": "temporal", "title": "Date"},
                  {
                    "field": "sum_daily_new_deaths_each_country",
                    "type": "quantitative",
                    "title": "Deaths"
                  }
                ]
              }
            },
            {
              "mark": {"type": "rule", "strokeDash": [2, 2], "size": 2},
              "transform": [
                  {
                      "aggregate": [
                        {
                          "op": "sum",
                          "field": "daily_new_deaths",
                          "as": "sum_daily_new_deaths_each_country"
                        }
                      ],
                      "groupby": ["date"]
                    }
              ],
              "encoding": {
                "y": {"field": "sum_daily_new_deaths_each_country", "aggregate": "mean"},
                "color": {"value": "red"}
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dx": 40,
                "dy": -30,
                "fontSize": 13,
                "fontStyle": "italic"
              },
              "transform": [
                  {
                      "aggregate": [
                        {
                          "op": "sum",
                          "field": "daily_new_deaths",
                          "as": "sum_daily_new_deaths_each_country"
                        }
                      ],
                      "groupby": ["date"]
                    }
              ],
              "encoding": {
                "text": {"value": ["Average", "daily deaths"]},
                "x": {"value": 0},
                "y": {"field": "sum_daily_new_deaths_each_country", "aggregate": "mean"}
              }
            }
          ]
        },
        {
          "width": 900,
          "height": 100,
          "title": "Use this line chart to filter data based on date",
          "mark": "area",
          "params": [
            {
              "name": "brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "transform": [
              {
                  "aggregate": [
                    {
                      "op": "sum",
                      "field": "daily_new_deaths",
                      "as": "sum_daily_new_deaths_each_country"
                    }
                  ],
                  "groupby": ["date"]
                }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "axis": {"format": "%b %Y"}
            },
            "y": {
              "field": "sum_daily_new_deaths_each_country",
              "type": "quantitative",
              "axis": {"grid": false, "title": "deaths"}
            },
            "tooltip": [
              {"field": "date", "type": "temporal", "title": "Date"},
              {
                "field": "sum_daily_new_deaths_each_country",
                "type": "quantitative",
                "title": "Deaths"
              }
            ]
          }
        }
      ]
    }
