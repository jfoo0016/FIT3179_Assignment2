  "hconcat": [
    {
      "width": 900,
      "height": 600,
      "title": {
        "text": "Confirmed cases around the world",
        "subtitle": "Active, recovered and deaths in terms of total count"
      },
      "projection": {
        "type": "equalEarth",
        "translate": [450, 300],
        "scale": {"expr": "zoom_level"}
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "white"},
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/new_daily_data.csv"
                },
                "key": "country",
                "fields": [
                  "date",
                  "country",
                  "cumulative_total_cases",
                  "population"
                ]
              }
            },
            {
              "filter": "(Country_selection == null || datum.country == Country_selection)"
            },
            {
              "calculate": "floor(datum.cumulative_total_cases / (datum.population / 1000000))",
              "as": "total_confirmed_country"
            }
          ],
          "encoding": {
            "color": {
              "field": "total_confirmed_country",
              "type": "quantitative",
              "scale": {"type": "log", "scheme": "goldred"},
              "title": "total confirmed cases",
              "legend": {"orient": "bottom"}
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {
                "field": "total_confirmed_country",
                "type": "quantitative",
                "title": "Total confirmed cases"
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/js/ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "text",
            "dx": 0,
            "fontSize": 13,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "properties.NAME", "type": "nominal"},
            "longitude": {
              "field": "properties.LABEL_X",
              "type": "quantitative"
            },
            "latitude": {"field": "properties.LABEL_Y", "type": "quantitative"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Canada' || datum['properties.NAME'] == 'Antarctica' || datum['properties.NAME'] == 'Australia'",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "width": 900,
      "height": 600,
      "title": {"text": "Distribution of confirmed cases by continent"},
      "data": {
        "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/coronavirus_summary_grouped.csv"
      },
      "encoding": {
        "theta": {
          "field": "total_confirmed",
          "type": "quantitative",
          "stack": true
        },
        "color": {"field": "continent", "type": "nominal", "legend": null},
        "tooltip": [
          {"field": "continent", "type": "nominal", "title": "Continent"},
          {
            "field": "total_confirmed",
            "type": "quantitative",
            "title": "Confirmed cases"
          }
        ]
      },
      "layer": [
        {"mark": {"type": "arc", "innerRadius": 150}},
        {
          "mark": {"type": "text", "radius": 350},
          "encoding": {"text": {"field": "continent", "type": "nominal"}}
        },
        {
          "data": {
            "values": [
              {"x": 0, "y": 0, "img": "data/covid.png"}
            ]
          },
          "mark": {"type": "image", "width": 200, "height": 200, "stroke": null},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "axis": null},
            "y": {"field": "y", "type": "quantitative", "axis": null},
            "url": {"field": "img", "type": "nominal"},
            "tooltip": []
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
   }
  }
