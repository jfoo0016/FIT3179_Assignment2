{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 20 countries in percentage of fully vaccinated population",
    "subtitle": "Percentage of total population that have been fully vaccinated"
  },
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/summary_and_vaccine_data.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {"field": "country", "type": "nominal", "axis": {"labelAngle": 0}, "sort": "-y"},
    "y": {"field": "percentage_fully_vaccinated", "type": "quantitative"},
    "tooltip": [
      {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "percentage_fully_vaccinated",
        "type": "quantitative",
        "title": "Percentage of fully vaccinated population"
      }
    ]
  }
}