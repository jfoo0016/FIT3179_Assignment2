{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 countries in percentage of fully vaccinated population",
    "subtitle": "Percentage of total population that have been fully vaccinated"
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/bar_chart_data.csv"
  },
  "layer": [
    {
      "mark": {"type": "bar", "width": {"band": 0.15}},
      "encoding": {
        "x": {"field": "country", "type": "nominal", "axis": {"labelAngle": 0}, "sort":null},
        "y": {"field": "percentage_fully_vaccinated", "type": "quantitative"},
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_fully_vaccinated",
            "type": "quantitative",
            "title": "Percentage of fully vaccinated population"
          }
        ]
      }
    },
    {
      "mark": {"type": "circle", "size": 600, "opacity": 1},
      "encoding": {
        "x": {"field": "country", "type": "nominal", "sort": null},
        "y": {"field": "percentage_fully_vaccinated", "type": "quantitative"},
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_fully_vaccinated",
            "type": "quantitative",
            "title": "Percentage of fully vaccinated population"
          }
        ]
      }
    }
  ]

}
