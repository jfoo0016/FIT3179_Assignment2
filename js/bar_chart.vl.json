{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 countries in fully vaccinated population  "
  },
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jfoo0016/FIT3179_Assignment2/main/data/bar_chart_data.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "height": {
          "band": 0.20
        },
        "yOffset": 5
      },
      "encoding": {
        "y": {
          "field": "country",
          "type": "nominal",
          "scale": {"padding": 0},
          "axis": {
            "grid": true,
            "bandPosition": 0,
            "ticks": false,
            "labelAngle": 0,
            "labelOverlap": true,
            "labelAlign": "left",
            "labelBaseline": "middle",
            "labelPadding": -5,
            "labelOffset": -15,
            "titleX": 5,
            "titleY": -5,
            "titleAngle": 0,
            "titleAlign": "left"
          },
          "sort": null
        },
        "x": {
          "field": "percentage_fully_vaccinated",
          "type": "quantitative",
          "title": "fully vaccinated population (%)",
          "axis": {"grid": false}
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_fully_vaccinated",
            "type": "quantitative",
            "title": "Percentage of fully vaccinated population (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 500,
        "opacity": 1,
        "yOffset": 5
      },
      "encoding": {
        "y": {
          "field": "country",
          "type": "nominal",
          "sort": null
        },
        "x": {
          "field": "percentage_fully_vaccinated",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_fully_vaccinated",
            "type": "quantitative",
            "title": "Percentage of fully vaccinated population"
          }
        ]
      }
    }
  ]
}